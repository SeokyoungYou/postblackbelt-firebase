{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "./functions",
    "rootDir": "./functions/ts",
    "sourceMap": false
  },
  "include": ["functions/ts/**/*.ts"],
  "exclude": [
    "node_modules", // Typically excluded to avoid including any library files
    "**/*.test.ts" // Optionally exclude test files if present
  ]
}
